<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailScannActivity" >
    <!--    tools:context="${relativePackage}.${activityClass}"-->

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Jenis Sampah: "
            android:textColor="@color/lbl_name"/>

        <TextView
            android:id="@+id/jenisSampah"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/lbl_name"
            android:text="j"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Berat Sampah: "
            android:textColor="@color/lbl_name"/>

        <TextView
            android:id="@+id/beratSampah"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/lbl_name"
            android:text="g"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdateProfil"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="OK"
            android:onClick="simpanTransaksiBuang"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/batal"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:background="@color/btn_logut_bg"
            android:text="BATAL"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:onClick="tombolBatal"
            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>