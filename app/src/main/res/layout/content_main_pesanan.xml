    <TextView
        android:id="@+id/namaAcaraPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="Nama Acara"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/tanggalJemputPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/namaAcaraPesanan"
        android:text="yyyy-MM-dd"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/separatorPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaAcaraPesanan"
        android:layout_toRightOf="@id/tanggalJemputPesanan"
        android:layout_marginLeft="3dp"
        android:text=" - "
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/waktuJemputPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaAcaraPesanan"
        android:layout_toRightOf="@id/separatorPesanan"
        android:layout_marginLeft="3dp"
        android:text="HH:mm:ss"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/alamatJemputPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanggalJemputPesanan"
        android:layout_marginLeft="3dp"
        android:text="alamat"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/perkiraanBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="0 kg" />

    <Button
        android:id="@+id/terima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:layout_below="@id/alamatJemputPesanan"
        android:text="Terima"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/tolak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_below="@id/alamatJemputPesanan"
        android:layout_toLeftOf="@id/terima"
        android:background="@color/input_login_hint"
        android:text="Tolak" />

</RelativeLayout>