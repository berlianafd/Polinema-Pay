                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panduan Registrasi"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"/>
